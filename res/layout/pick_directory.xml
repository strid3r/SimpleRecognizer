<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
			  android:id="@+id/linearLayoutPickDirectory"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical"
			  android:padding="0.0dp">
	
	<!-- FILE -->
	<ListView android:id="@android:id/list"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:layout_weight="1.0"
			  android:scrollbarStyle="outsideOverlay"
			  android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track"
			  android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
			  android:scrollbarSize="8.0dp"
			  android:padding="2dp"/>
	
	<!-- ADMOB -->
	<LinearLayout android:id="@+id/linearLayoutAdView"
				  style="@style/Main.AdView" />
	
	<!-- CONTROLS -->
	<LinearLayout android:id="@+id/linearLayoutPickDirectoryControls"
				  android:layout_width="match_parent"
				  android:layout_height="wrap_content"
				  android:layout_weight="0.0"
				  android:orientation="horizontal"
				  android:weightSum="1.0">
		
		<!-- CANCEL -->
		<ru.strider.widget.MainButton android:id="@+id/buttonControlCancel"
									  android:text="@string/pick_directory_control_cancel"
									  android:layout_weight="0.5"
									  android:textColor="@color/main"
									  style="@style/Main.ButtonMain.TextViewAbout.Info"
									  android:onClick="onClickButtonCancel" />
		
		<!-- EXPORT -->
		<ru.strider.widget.MainButton android:id="@+id/buttonControlExport"
									  android:text="@string/pick_directory_control_export"
									  android:layout_weight="0.5"
									  android:textColor="@color/main"
									  style="@style/Main.ButtonMain.TextViewAbout.Info"
									  android:onClick="onClickButtonExport" />
		
	</LinearLayout>
	
</LinearLayout>
