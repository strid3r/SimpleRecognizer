<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/scrollViewAlertDialogManagePHashShowComment"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track"
			android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
			android:scrollbarSize="8.0dp">
	
	<LinearLayout android:id="@+id/linearLayoutAlertDialogManagePHashShowComment"
				  android:layout_width="match_parent"
				  android:layout_height="wrap_content"
				  android:orientation="vertical"
				  android:padding="0.0dp">
		
		<!-- COMMENT -->
		<ru.strider.widget.MainTextView android:id="@+id/textViewCommentTitle"
										android:text="@string/manage_phash_dialog_comment_title"
										style="@style/Main.AlertDialog.TextView.Title.Sub" />
		
		<EditText android:id="@+id/editTextComment"
				  android:inputType="textMultiLine|none"
				  style="@style/Main.AlertDialog.EditView" />
		
	</LinearLayout>
	
</ScrollView>
