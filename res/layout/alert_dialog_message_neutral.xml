<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:id="@+id/linearLayoutAlertDialogMessageNeutral"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:orientation="vertical"
			  android:padding="2.0dp">
	
	<!-- CONTENT -->
	<ScrollView android:id="@+id/scrollViewAlertDialogMessageNeutralContent"
				android:layout_width="match_parent"
				android:layout_height="0.0dp"
				android:layout_weight="1.0"
				android:layout_margin="4.0dp"
				android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track"
				android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
				android:scrollbarSize="8.0dp">
		
		<!-- MESSAGE NEUTRAL -->
		<LinearLayout android:id="@+id/linearLayoutAlertDialogMessageNeutralContent"
					  android:layout_width="match_parent"
					  android:layout_height="wrap_content"
					  android:orientation="vertical">
			
			<!-- INFO -->
			<ru.strider.widget.MainTextView android:id="@+id/textViewMessageInfo"
											android:text="@null"
											style="@style/Main.AlertDialog.TextView" />
			
			<!-- HINT -->
			<ru.strider.widget.MainTextView android:id="@+id/textViewMessageHint"
											android:text="@null"
											android:gravity="center"
											style="@style/Main.AlertDialog.TextView"
											android:visibility="gone" />
			
		</LinearLayout>
		
	</ScrollView>
	
	<!-- CONTROLS -->
	<LinearLayout android:id="@+id/linearLayoutAlertDialogMessageNeutralControls"
				  android:layout_width="match_parent"
				  android:layout_height="wrap_content"
				  android:layout_weight="0.0"
				  android:orientation="horizontal">
		
		<!-- NEUTRAL -->
		<ru.strider.widget.MainButton android:id="@+id/buttonAlertDialogNeutral"
									  android:text="@string/dialog_button_close_controls"
									  android:textSize="24sp"
									  android:textColor="@color/main"
									  style="@style/Main.Button.TextView.Info" />
		
	</LinearLayout>
	
</LinearLayout>
