<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/scrollViewAlertDialogManageItemShowContent"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="4.0dp"
			android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track"
			android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
			android:scrollbarSize="8.0dp">
	
	<LinearLayout android:id="@+id/linearLayoutAlertDialogManageItemShowContent"
				  android:layout_width="match_parent"
				  android:layout_height="wrap_content"
				  android:orientation="vertical"
				  android:padding="0.0dp">
		
		<!-- CONTENT -->
		<ru.strider.widget.MainTextView android:id="@+id/textViewContentTitle"
										android:text="@string/manage_item_dialog_content_title"
										style="@style/Main.AlertDialog.TextView.Title.Sub" />
		
		<EditText android:id="@+id/editTextContent"
				  android:inputType="textMultiLine|none"
				  style="@style/Main.AlertDialog.EditView" />
		
		<!-- VIDEO URI -->
		<ru.strider.widget.MainTextView android:id="@+id/textViewVideoUriTitle"
										android:text="@string/manage_item_dialog_video_uri_title"
										style="@style/Main.AlertDialog.TextView.Title.Sub" />
		
		<EditText android:id="@+id/editTextVideoUri"
				  android:inputType="textMultiLine|textUri|none"
				  style="@style/Main.AlertDialog.EditView" />
		
	</LinearLayout>
	
</ScrollView>
