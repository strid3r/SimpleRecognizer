<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/scrollViewAlertDialogSelectCourseEdit"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track"
			android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
			android:scrollbarSize="8.0dp">
	
	<LinearLayout android:id="@+id/linearLayoutAlertDialogSelectCourseEdit"
				  android:layout_width="match_parent"
				  android:layout_height="wrap_content"
				  android:orientation="vertical"
				  android:padding="0.0dp">
		
		<!-- TITLE -->
		<ru.strider.widget.MainTextView android:id="@+id/textViewTitleTitle"
										android:text="@string/select_course_dialog_title_title"
										style="@style/Main.AlertDialog.TextView.Title.Sub" />
		
		<EditText android:id="@+id/editTextTitle"
				  style="@style/Main.AlertDialog.EditView" />
		
		<!-- CATEGORY -->
		<ru.strider.widget.MainTextView android:id="@+id/textViewCategoryTitle"
										android:text="@string/select_course_dialog_category_title"
										style="@style/Main.AlertDialog.TextView.Title.Sub" />
		
		<EditText android:id="@+id/editTextCategory"
				  style="@style/Main.AlertDialog.EditView" />
		
		<!-- VERSION -->
		<ru.strider.widget.MainTextView android:id="@+id/textViewVersionTitle"
										android:text="@string/select_course_dialog_version_title"
										style="@style/Main.AlertDialog.TextView.Title.Sub" />
		
		<EditText android:id="@+id/editTextVersion"
				  android:inputType="number"
				  style="@style/Main.AlertDialog.EditView" />
		
		<!-- CREATOR -->
		<ru.strider.widget.MainTextView android:id="@+id/textViewCreatorTitle"
										android:text="@string/select_course_dialog_creator_title"
										style="@style/Main.AlertDialog.TextView.Title.Sub" />
		
		<EditText android:id="@+id/editTextCreator"
				  android:inputType="textEmailAddress"
				  style="@style/Main.AlertDialog.EditView" />
		
	</LinearLayout>
	
</ScrollView>
