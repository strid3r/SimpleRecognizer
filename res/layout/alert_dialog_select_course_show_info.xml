<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/scrollViewAlertDialogSelectCourseShowInfo"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="4.0dp"
			android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track"
			android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
			android:scrollbarSize="8.0dp">
	
	<LinearLayout android:id="@+id/linearLayoutAlertDialogSelectCourseShowInfo"
				  android:layout_width="match_parent"
				  android:layout_height="wrap_content"
				  android:orientation="vertical"
				  android:padding="0.0dp">
		
		<!-- VERSION -->
		<ru.strider.widget.MainTextView android:id="@+id/textViewVersionTitle"
										android:text="@string/select_course_dialog_version_title"
										style="@style/Main.AlertDialog.TextView.Title.Sub" />
		
		<EditText android:id="@+id/editTextVersion"
				  android:inputType="number|none"
				  style="@style/Main.AlertDialog.EditView" />
		
		<!-- CREATOR -->
		<ru.strider.widget.MainTextView android:id="@+id/textViewCreatorTitle"
										android:text="@string/select_course_dialog_creator_title"
										style="@style/Main.AlertDialog.TextView.Title.Sub" />
		
		<EditText android:id="@+id/editTextCreator"
				  android:inputType="textMultiLine|textEmailAddress|none"
				  style="@style/Main.AlertDialog.EditView" />
		
	</LinearLayout>
	
</ScrollView>
