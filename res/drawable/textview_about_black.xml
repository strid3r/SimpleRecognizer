<selector xmlns:android="http://schemas.android.com/apk/res/android"
		  android:dither="true">
	
	<!-- PRESSED -->
	<item android:state_pressed="true">
		
		<shape android:shape="rectangle">
			
			<solid android:color="@color/blackSolid" />
			
			<stroke android:width="1.0dp"
					android:color="@color/gray_light" />
			
			<corners android:radius="0.0dp" />
			
		</shape>
		
	</item>
	
	<!-- FOCUSED -->
	<item android:state_focused="true">
		
		<shape android:shape="rectangle">
			
			<solid android:color="@color/blackSolid" />
			
			<stroke android:width="1.0dp"
					android:color="@color/gray_light" />
			
			<corners android:radius="0.0dp" />
			
		</shape>
		
	</item>
	
	<!-- SELECTED -->
	<item android:state_selected="true">
		
		<shape android:shape="rectangle">
			
			<solid android:color="@color/blackSolid" />
			
			<stroke android:width="1.0dp"
					android:color="@color/gray_light" />
			
			<corners android:radius="0.0dp" />
			
		</shape>
		
	</item>
	
	<!-- THE REST -->
	<item>
		
		<shape android:shape="rectangle">
			
			<gradient android:angle="270.0"
					  android:startColor="@color/blackSolid"
					  android:endColor="@color/blackStroke" />
			
			<stroke android:width="1.0dp"
					android:color="@color/blackStroke" />
			
			<corners android:radius="0.0dp" />
			
		</shape>
		
	</item>
	
</selector>
