<resources>
	
	<!-- MAIN ACTION BAR -->
	<style name="Widget.Main.ActionBar"
		   parent="@style/Widget.Sherlock.ActionBar">
		
		<item name="displayOptions">
			useLogo|showHome|showTitle
		</item>
		
		<item name="titleTextStyle">
			@style/TextAppearance.Main.Widget.ActionBar.Title
		</item>
		
		<item name="background">
			@drawable/background_header
		</item>
		
		<item name="backgroundStacked">
			@null
		</item>
		
		<item name="indeterminateProgressStyle">
			@style/Widget.Main.ProgressBar.Indeterminate
		</item>
		
	</style>
	
	<!-- MAIN ACTION BAR TITLE TEXT STYLE -->
	<style name="TextAppearance.Main.Widget.ActionBar.Title"
		   parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Title">
		
		<item name="android:textStyle">
			bold
		</item>
		
		<item name="android:textColor">
			@color/main
		</item>
		
		<item name="android:shadowColor">
			@color/black
		</item>
		
		<item name="android:shadowDx">
			1
		</item>
		
		<item name="android:shadowDy">
			1
		</item>
		
		<item name="android:shadowRadius">
			2
		</item>
		
	</style>
	
	<!-- MAIN PROGRESSBAR INDETERMINATE STYLE -->
	<style name="Widget.Main.ProgressBar.Indeterminate"
		   parent="@style/Widget.Sherlock.ProgressBar">
		
		<item name="android:indeterminateDrawable">
			@drawable/progress_indeterminate
		</item>
		
	</style>
	
</resources>
