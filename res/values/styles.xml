<resources>
	
	<!-- MAIN -->
	<style name="Main" />
	
	<!-- MAIN ADMOB -->
	<style name="Main.AdView">
		
		<item name="android:layout_width">
			match_parent
		</item>
		
		<item name="android:layout_height">
			wrap_content
		</item>
		
		<item name="android:layout_weight">
			0.0
		</item>
		
	</style>
	
	<!-- MAIN LIST ITEM -->
	<style name="Main.ListItem">
		
		<item name="android:includeFontPadding">
			false
		</item>
		
		<item name="android:lines">
			1
		</item>
		
		<item name="android:maxLines">
			1
		</item>
		
		<item name="android:singleLine">
			true
		</item>
		
		<item name="android:ellipsize">
			marquee
		</item>
		
		<item name="android:marqueeRepeatLimit">
			marquee_forever
		</item>
		
		<item name="android:scrollHorizontally">
			true
		</item>
		
		<item name="android:gravity">
			center_vertical
		</item>
		
		<item name="typeface">
			@string/font_bold
		</item>
		
		<item name="android:textSize">
			24sp
		</item>
		
		<item name="android:textStyle">
			bold
		</item>
		
		<item name="android:textColor">
			@color/white
		</item>
		
		<item name="android:shadowColor">
			@color/black
		</item>
		
		<item name="android:shadowDx">
			1
		</item>
		
		<item name="android:shadowDy">
			1
		</item>
		
		<item name="android:shadowRadius">
			2
		</item>
		
	</style>
	
	<!-- MAIN LIST ITEM EMPTY -->
	<style name="Main.ListItem.Empty">
		
		<item name="android:layout_width">
			match_parent
		</item>
		
		<item name="android:layout_height">
			wrap_content
		</item>
		
		<item name="android:gravity">
			center
		</item>
		
		<item name="android:textSize">
			22sp
		</item>
		
		<item name="android:background">
			@drawable/textview_about_black
		</item>
		
		<item name="android:paddingLeft">
			14.0dp
		</item>
		
		<item name="android:paddingTop">
			20.0dp
		</item>
		
		<item name="android:paddingRight">
			14.0dp
		</item>
		
		<item name="android:paddingBottom">
			20.0dp
		</item>
		
	</style>
	
	<!-- MAIN LIST ITEM ACTIVATED -->
	<style name="Main.ListItem.Activated">
		
		<item name="android:background">
			@drawable/activated_background
		</item>
		
	</style>
	
	<!-- MAIN LIST ITEM SINGLE CHOICE -->
	<style name="Main.ListItem.SingleChoice">
		
		<item name="android:checkMark">
			?android:attr/listChoiceIndicatorSingle
		</item>
		
	</style>
	
	<!-- MAIN LIST ITEM SINGLE CHOICE ACTIVATED -->
	<style name="Main.ListItem.SingleChoice.Activated"
		   parent="@style/Main.ListItem.Activated">
		
		<item name="android:checkMark">
			?android:attr/listChoiceIndicatorSingle
		</item>
		
	</style>
	
	<!-- MIAN ACTION BAR -->
	<style name="Main.ActionBar" />
	
