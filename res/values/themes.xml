<resources xmlns:android="http://schemas.android.com/apk/res/android">
	
	<!-- MAIN -->
	<style name="Theme.Main"
		   parent="@style/Theme.Sherlock">
		
		<item name="android:windowBackground">
			@drawable/background_main
		</item>
		
		<item name="actionBarStyle">
			@style/Widget.Main.ActionBar
		</item>
		
	</style>
	
	<!-- MAIN ACTION BAR OVERLAY -->
	<style name="Theme.Main.ActionBarOverlay">
		
		<item name="windowActionBarOverlay">
			true
		</item>
		
	</style>
	
	<!-- MAIN NO ACTION BAR -->
	<style name="Theme.Main.NoActionBar"
		   parent="@style/Theme.Sherlock.NoActionBar">
		
		<item name="android:windowBackground">
			@drawable/background_main
		</item>
		
	</style>
	
</resources>
